<article>
  <a href="/dashboard"> &larr; Return to dashboard</a>
  <h2>
    Edit
  </h2>
  <form class="edit_post_form">
    <div>
      <input name="post_title" type="text" value="{{post.title}}" />
      <span>({{format_url post.post_url}})</span>
    </div>
    <div>
      
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit">Save</button>
    <button type="button" class="delete_post_btn">Delete</button>
  </form>
</article>

<form class="comment_form">
  <div>
    <textarea name="comment_body"></textarea>
  </div>

  <div>
    <button type="submit">Submit Comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/js/edit.js"></script>
<script src="/js/comment.js"></script>
<script src="/js/delete.js"></script>